<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colors -->
        <item name="android:colorPrimary">#E91E63</item>
        <item name="android:textColorPrimary">@color/text_title</item>
        <item name="android:textColor">@color/text_normal</item>

        <!-- Fonts -->
        <item name="android:fontFamily">sans-serif-light</item>

        <!-- Flags -->
        <item name="android:windowContentTransitions">true</item>
    </style>
    
    <style name="MainTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Subtitle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">14sp</item>
    </style>>

</resources>
